export ANSIBLE_HOST_KEY_CHECKING=False

expect -c "
    
    spawn ansible-playbook {{ ansible_user_dir }}/ansible/playbooks/system_ssh_reset-sshd-config-and-firewall.yml -S --ask-su-pass -i "{{ item.key }}:{{ ssh_port }}," --ask-vault-pass 

    expect "SU*"

    send -- \"{{ item.value.password }}\n\"

    expect "Vault*password"

    send \"{{ vault_password }}\n\"

    expect "Enter*passphrase"

    send \"{{ vault_password }}\n\"

    interact
    "    

expect -c "

    spawn ansible-playbook {{ ansible_user_dir }}/ansible/playbooks/system_ssh_remove-users.yml -u root -k -i "{{ item.key }}," --ask-vault-pass -c paramiko

    expect "SSH*"

    send -- \"{{ item.value.password }}\n\"

    expect "Vault*password"

    send \"{{ vault_password }}\n\"

    interact
    "


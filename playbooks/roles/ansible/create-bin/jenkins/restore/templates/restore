PROGNAME=$(basename $0)
VERSION="0.1"

usage() {
    echo "Usage: $PROGRAM [OPTIONS] FILE"
    echo "  This script is ~."
    echo
    echo "Options:"
    echo "  -h, --help"
    echo
    echo "  --version"
    echo
    echo "  --jenkins_backup_data_dir ARGUMENT"
    echo "          Jenkins restoreが利用するバックアップサーバーのデータ格納ディレクトリ"
    echo "          バックアップサーバーの"
    echo "          /var/www/html/{ jenkins_backp_dir } にデータが格納されているとする"
    echo "          初期値は「jenkins-backup」"
    echo
    echo "  --jenkins_backup_data_host ARGUMENT"
    echo "          Jenkins restoreが利用するバックアップサーバーのホスト名"
    echo "          http://から指定する"
    echo "          初期値は「http://example.com」"
    echo 
    echo "  --jenkins_installed_dir ARGUEMT"
    echo "          Jenkinsインストールディレクトリ"
    echo "          初期値は「/var/lib/jenkins」"
    echo
    echo "  --jenkins_restore_work_dir ARGUMENT"
    echo "          Jenkins restore利用する作業用ディレクトリ"
    echo "          初期値は「/tmp/jenkins-restore」"
    echo
    exit 1
}

EXTRA_VARS=""

for OPT in "$@"
do
    case "$OPT" in
        '-h'|'--help' )
            usage
            exit 1
            ;;

        '--version' )
            echo $VERSION
            exit 1
            ;;

        '--jenkins_backup_data_dir' )
            if [[ -z "$2" ]] || [[ "$2" =~ ^-+ ]]; then
                echo "RPROGRAM: option requires an argument -- $1"
                exit 1
            fi
            EXTRA_VARS="${EXTRA_VARS} jenkins_backup_data_dir=$2"
            shift 1 
            ;;

        '--jenkins_backup_data_host' )
            if [[ -z "$2" ]] || [[ "$2" =~ ^-+ ]]; then
                echo "RPROGRAM: option requires an argument -- $1"
                exit 1
            fi
            EXTRA_VARS="${EXTRA_VARS} jenkins_backup_data_host=$2"
            shift 1 
            ;;

        '--jenkins_installed_dir' )
            if [[ -z "$2" ]] || [[ "$2" =~ ^-+ ]]; then
                echo "RPROGRAM: option requires an argument -- $1"
                exit 1
            fi
            EXTRA_VARS="${EXTRA_VARS} jenkins_installed_dir=$2"
            shift 1
            ;;

        '--jenkins_restore_work_dir' )
            if [[ -z "$2" ]] || [[ "$2" =~ ^-+ ]]; then
                echo "RPROGRAM: option requires an argument -- $1"
                exit 1
            fi
            EXTRA_VARS="${EXTRA_VARS} jenkins_restore_work_dir=$2"
            shift 1
            ;;

        '--'|'-' )
            shift 1
            param+=( "$@" )
            break
            ;;

        -*)
            echo "$PROGNAME: illegal option -- '$(echo $1 | sed 's/^-*//')'" 1>&2
            exit 1
            ;;

        *)
            if [[ ! -z "$1" ]] && [[ ! "$1" =~ ^-x ]]; then
                param+=( "$1" )
                shift 1
            fi
            ;;
    esac
done

EXTRA_VARS_ARGS=""
extra_vars=""

if [[ ! -z "${EXTRA_VARS}" ]]; then
    EXTRA_VARS_ARGS=`echo ${EXTRA_VARS} | sed -e 's/^<space>//'`
    extra_vars="--extra-vars \"${EXTRA_VARS_ARGS}\""
fi


export ANSIBLE_HOST_KEY_CHECKING=False

# ログファイルのパスを設定する
LOG_PATH="{{ ansible_user_dir }}/ansible/bin/jenkins_restore-{{ item.key }}.log"
rm -rf ${LOG_PATH}
export ANSIBLE_LOG_PATH=${LOG_PATH}

expect -c "

    set timeout -1

    spawn ansible-playbook {{ ansible_user_dir }}/ansible/playbooks/jenkins_restore.yml --become-method=su --ask-become-pass -i "{{ item.key }}:{{ ssh_port }}," -u ansible --ask-vault-pass `echo ${extra_vars}` 

    expect "SU*"

    send -- \"{{ item.value.password }}\n\"

    expect "Vault*password"

    send \"{{ vault_password }}\n\"

    expect "Enter*passphrase"

    send \"{{ vault_password }}\n\"

    expect eof
    exit
    "    

# SSH接続が失敗している場合はステータス「1」を返して終了する
if tail -n 1 ${LOG_PATH} | grep unreachable=1 ; then
    exit 1
fi

# 処理が失敗している場合はステータス「1」を返して終了する
if ! tail -n 1 ${LOG_PATH} | grep failed=0 ; then
    exit 1
fi
